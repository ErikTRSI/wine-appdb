:javascript
  if (appId) { appId = "#{@wine_app.id}"; }
=render_breadcrumbs

.page-header
  %h1
    =@wine_app.name
    %small= @wine_app.developer.name if @wine_app.developer
    %span.btn-group#edit-toolbar
      - if user_signed_in?
        =link_to edit_wine_app_path(@wine_app), class: "btn btn-default" do
          %i.fa.fa-edit
        =link_to @wine_app, class: "btn btn-default ", method: :delete, data: { confirm: 'Are you sure?' } do
          %i.fa.fa-trash-o

  .well.well-sm.container-fluid
    .app-well
      #logo.app-logo.well.well-sm.text-center.col-md-3
        %i.fa.fa-meh-o.fa-5x
        %br/
        If this app had a logo, this is where it'd go.
      .vote-component.text-center.well.well-sm.col-md-3
        %center
          #vote-chart
            &nbsp;
      
        %a.btn.btn-default.btn-sm.btn-block.btn-vote{ data: { placement: "bottom", toggle: "button" } }
          %i.fa.fa-star-half-full
          Vote
        .voteform
          = form_for @vote, url: wine_app_votes_path(@wine_app, format: :json), html: { id: "voteForm" }, remote: true, method: :post do |f| 
            %strong Difficulty
            = f.range_field :difficulty_value, { min: 0, max: 100, step: 1 }
            %br/
            %strong Quality
            = f.range_field :quality_value, { min: 0, max: 100, step: 1 }
            %br/
            = submit_tag "Vote", class: "btn btn-primary btn-block btn-sm"
          #votealert.alert.alert-success.fade.in(style="width: 50%; display: none;")
            %button.close(type="button" data-dismiss="alert")
              :plain
                &times;
            .message
      .screenshots.col-md-6 
        - if @wine_app.screenshots.count > 0
          -@wine_app.screenshots.limit(3).each do |ss|
            .screenshot
              = link_to image_tag(ss.image.url(:thumb), class: "/*img-rounded img-thumbnail*/"), wine_app_screenshot_path(@wine_app, ss)
        .thumbnail.add-screenshot.screenshot
          %i.fa.fa-plus-square.fa-5x
          %br/
          %small
            Add Screenshot



.well#tabs
  %ul.nav.nav-pills
    %li.active
      %a{data: {toggle: "tab"}}(href="#tab-desc") Description
    %li 
      %a{data: {toggle: "tab"}}(href="#tab-probs") Known Problems

  .tab-content
    .tab-pane.fade.in.active#tab-desc
      .page-header
        %h3 
          Description
        %small 
          [ 
          =link_to("History", wine_app_descriptions_path(@wine_app)) 
          ]
      #wiki
        :markdown
          #{ @wine_app.description }

      - if user_signed_in? 

        = form_for wine_app_wiki_entries_path(@wine_app, wiki_type: "descriptions"), html: {id: "descForm"}, remote: true, method: :post do |f|
          = f.hidden_field :description, id: "hidDescription", name: "wiki_entry[content]"
          = hidden_field_tag "wiki_entry[type]", "description", id: "hidType"

          :javascript
            $('#wiki').hallo({
              plugins: {
                'halloformat': {},
                'halloheadings': {},
                'halloblock': {},
                'hallojustify': {},
                'hallolists': {},
                'halloreundo': {}
              },
              toolbar: 'halloToolbarFixed'
            });
            jQuery('#wiki').bind('hallomodified', function(event, data) { 
              // console.debug(toMarkdown(data.content));
              jQuery('#hidDescription').val(toMarkdown(data.content)); 
            });
            jQuery('#descForm').bind('ajax:success', function(event, data, textStatus, xhr) { 
              console.debug(data);
            });

          = submit_tag "Update", class: "btn btn-primary "
          #descalert.alert.alert-success.fade.in(style="width: 50%; display: none;")
            %button.close(type="button" data-dismiss="alert")
              :plain
                &times;
            .message

          :javascript
            $('form#descForm').bind('ajax:success', 
              function(evt, data, status, xhr){
                console.log(data.message);
                $alert = $('#descalert');
                $msg = $('div:first.message', $alert);
                $msg.text(data.message);
                $alert.show();

                setInterval(function() { $alert.hide(); }, 3000);
              });
            
            $('form#descForm').ajaxError(function(xhr, status, error) {
              $('#descalert.message').text('Failed.');
            });

            $('.btn-vote').popover({
              html: true,
              title: 'Vote',
              content: function() {
                return $('.voteform').html();
              }
            });
            $('#trash-btn').popover({
              container: 'body'
            });

    .tab-pane.fade#tab-probs
      .page-header
        %h3 Problems
      -if @wine_app.problems.count > 0
        %ul
          - @wine_app.problems.each do |p| 
            %li= p.problem
:javascript
  ready();

